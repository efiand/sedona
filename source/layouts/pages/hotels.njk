{% extends "layouts/main.njk" %}

{% block title %}Гостиницы{% endblock %}

{% block main %}
  <section class="catalog">
    <form class="catalog-filters" action="https://echo.htmlacademy.ru">
      <div class="catalog-header">
        <h1 class="catalog-heading">Гостиницы Седоны</h1>

        <ul class="catalog-breadcrumbs breadcrumbs">
          <li class="breadcrumbs-item">
            <a class="breadcrumbs-link breadcrumbs-link-root" href="index.html">
              <span class="visually-hidden">Главная.</span>
            </a>
          </li>
          <li class="breadcrumbs-item">
            <a class="breadcrumbs-link" href="hotels.html">Гостиницы</a>
          </li>
        </ul>

        <div class="filter">
          <fieldset class="filter-section">
            <legend class="filter-name">Инфраструктура:</legend>
            <label class="filter-group">
              <input class="filter-choose filter-choose-check" name="features[]" type="checkbox" value="pool">
              Бассейн
            </label>
            <label class="filter-group">
              <input class="filter-choose filter-choose-check" name="features[]" type="checkbox" value="parking">
              Парковка
            </label>
            <label class="filter-group">
              <input class="filter-choose filter-choose-check" name="features[]" type="checkbox" value="wi-fi">
              Wi-Fi
            </label>
          </fieldset>
          <fieldset class="filter-section">
            <legend class="filter-name">Тип жилья:</legend>
            <label class="filter-group">
              <input class="filter-choose" name="type" type="radio" value="hotel">
              Гостиница
            </label>
            <label class="filter-group">
              <input class="filter-choose" name="type" type="radio" value="motel">
              Мотель
            </label>
            <label class="filter-group">
              <input class="filter-choose" name="type" type="radio" value="apartments">
              Апартаменты
            </label>
          </fieldset>
          <fieldset class="filter-section">
            <legend class="filter-name">Стоимость, ₽:</legend>
            <p class="filter-range range">
              <label class="range-group">
                <input class="range-field" name="price[]" type="number" value="0" max="10000" min="0" step="100">
                от
              </label>
              <label class="range-group">
                <input class="range-field" name="price[]" type="number" value="9000" max="10000" min="0" step="100">
                до
              </label>
              <span class="range-scale">
                <button class="range-control">
                  <span class="visually-hidden">Меньше.</span>
                </button>
                <button class="range-control">
                  <span class="visually-hidden">Больше.</span>
                </button>
              </span>
            </p>
          </fieldset>
          <div class="filter-btns">
            <button class="filter-submit btn btn-primary" type="submit">Применить</button>
            <button class="filter-reset" type="reset">Сбросить</button>
          </div>
        </div>
      </div>

      <div class="result">
        <h2 class="heading result-heading">
        Найдено гостиниц:
        <span class="result-count">38</span>
        </h2>

        <label aria-label="Сортировка.">
          <select class="result-sort" name="sorting-dir">
            <option value="price-up">Сначала дешёвые</option>
            <option value="price-down">Сначала дорогие</option>
          </select>
        </label>

        <p class="result-mode">
          <label class="result-mode-item result-mode-item-tile">
            <span class="visually-hidden">Плиткой.</span>
            <input class="result-mode-choose" name="sorting-type" type="radio" value="tile" checked>
          </label>
          <label class="result-mode-item result-mode-item-slideshow">
            <span class="visually-hidden">Слайдщоу.</span>
            <input class="result-mode-choose" name="sorting-type" type="radio" value="slideshow">
          </label>
          <label class="result-mode-item result-mode-item-list">
            <span class="visually-hidden">Списком.</span>
            <input class="result-mode-choose" name="sorting-type" type="radio" value="list">
          </label>
        </p>
      </div>

      <ul class="catalog-list">
        <li class="catalog-item good">
          <img class="good-img" src="images/hotel-1.jpg" alt="Amara Resort &amp; Spa." height="220" width="299">
          <h3 class="good-title">Amara Resort &amp; Spa</h3>
          <p class="good-type">Гостиница</p>
          <p class="good-price">От 4000 ₽</p>
          <a class="good-btn btn" href="blank.html">Подробнее</a>
          <a class="good-btn btn btn-primary" href="blank.html">В избранное</a>
          <p class="good-star-rating">
            <span class="visually-hidden">4 звезды.</span>
          </p>
          <p class="good-rating">Рейтинг: 8,5</p>
        </li>
        <li class="catalog-item good">
          <img class="good-img" src="images/hotel-2.jpg" alt="Desert Quail Inn." height="220" width="309">
          <h3 class="good-title">Desert Quail Inn</h3>
          <p class="good-type">Гостиница</p>
          <p class="good-price">От 3000 ₽</p>
          <a class="good-btn btn" href="blank.html">Подробнее</a>
          <a class="good-btn btn btn-primary" href="blank.html">В избранное</a>
          <p class="good-star-rating">
            <span class="visually-hidden">3 звезды.</span>
          </p>
          <p class="good-rating">Рейтинг: 8,9</p>
        </li>
        <li class="catalog-item good">
          <img class="good-img" src="images/hotel-3.jpg" alt="Villas at Poco Diablo." height="220" width="308">
          <h3 class="good-title">Villas at Poco Diablo</h3>
          <p class="good-type">Гостиница</p>
          <p class="good-price">От 2000 ₽</p>
          <a class="good-btn btn" href="blank.html">Подробнее</a>
          <a class="good-btn btn btn-accent" href="blank.html">В избранном</a>
          <p class="good-star-rating">
            <span class="visually-hidden">2 звезды.</span>
          </p>
          <p class="good-rating">Рейтинг: 9,2</p>
        </li>
        <li class="catalog-item good">
          <img class="good-img" src="images/hotel-4.jpg" alt="GreenTree Inn." height="220" width="299">
          <h3 class="good-title">GreenTree Inn</h3>
          <p class="good-type">Гостиница</p>
          <p class="good-price">От 3000 ₽</p>
          <a class="good-btn btn" href="blank.html">Подробнее</a>
          <a class="good-btn btn btn-primary" href="blank.html">В избранное</a>
          <p class="good-star-rating">
            <span class="visually-hidden">2 звезды.</span>
          </p>
          <p class="good-rating">Рейтинг: 9,2</p>
        </li>
      </ul>

      <button class="catalog-more-btn btn btn-primary" name="limit" type="submit" value="8">
        Загрузить ещё
      </button>

      <ul class="catalog-pagination pagination">
        <li class="pagination-item">
          <button class="pagination-link pagination-link current" name="page" type="submit" value="1" disabled>
            1
          </button>
        </li>
        <li class="pagination-item">
          <button class="pagination-link" name="page" type="submit" value="2">
            2
          </button>
        </li>
        <li class="pagination-item">
          <button class="pagination-link" name="page" type="submit" value="3">
            3
          </button>
        </li>
        <li class="pagination-item">
          <button class="pagination-link" name="page" type="submit" value="4">
            4
          </button>
        </li>
        <li class="pagination-item">
          <button class="pagination-link" name="page" type="submit" value="5">
            ...
          </button>
        </li>
        <li class="pagination-item">
          <button class="pagination-link" name="page" type="submit" value="10">
            10
          </button>
        </li>
      </ul>

      <label class="catalog-limit">
        Гостиниц на странице:
        <select class="catalog-limit-list" name="limit">
          <option>4</option>
          <option>6</option>
        </select>
      </label>
    </form>
  </section>
{% endblock %}
