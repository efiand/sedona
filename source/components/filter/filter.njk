<div class="filter">
  {% for group in groups %}
    {% with group %}
      <fieldset class="filter-section {{ 'filter-section-range' if isRange }}">
        <legend class="filter-name">{{ title | punctify(":") }}</legend>
        {% if isRange %}
          {% include "components/range/range.njk" %}
        {% else %}
          <ul class="filter-list">
            {% for item in list %}
              <li>
                <input
                  class="visually-hidden"
                  id="checker-{{ item.value }}"
                  name="{{ name }}"
                  type="{{ type }}"
                  value="{{ item.value }}"
                />
                <label class="filter-choose filter-choose-{{ type }}" for="checker-{{ item.value }}">
                  {{ item.title }}
                </label>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </fieldset>
    {% endwith %}
  {% endfor %}

  <div class="filter-btns">
    <button class="button button-secondary filter-submit" name="page" value="1" type="submit">{{ submitTitle }}</button>
    <button class="filter-reset" type="reset">{{ resetTitle }}</button>
  </div>
</div>
