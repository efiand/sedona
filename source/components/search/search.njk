<section class="search">
  <p class="search-heading heading">{{ lead }}</p>
  <p class="search-description description">{{ text }}</p>
  <a class="button button-big search-link hidden" href="blank.html" data-modal="search">
    {{ title }}
  </a>

  <div class="modal" data-modal="search">
    <div class="modal-inner">
      <h2 class="modal-heading">{{ title }}</h2>
      <button class="modal-closer" type="button">
        <span class="visually-hidden">Закрыть окно.</span>
      </button>
      {% with form | setProp("cssMix", "modal-body") %}{% include "components/form/form.njk" %}{% endwith %}
    </div>
  </div>
</section>
