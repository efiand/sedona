<form class="form {{ cssMix }}" action="https://echo.htmlacademy.ru" method="post">
  {% for section in sections %}
    <fieldset class="form-section">
      <legend class="visually-hidden">{{ section.title | punctify }}</legend>
      {% for group in section.groups %}
        <p class="form-group {{ 'form-group-short' if section.counters }}">
          <label class="form-label" for="{{ group.id }}">
            {{ group.title | punctify(":") }}
            {% if group.tooltip %}
              <span class="form-tooltip tooltip" tabindex="0">
                <span class="tooltip-content">{{ group.tooltip }}</span>
              </span>
            {% endif %}
          </label>

          {% if section.counters %}
            <button class="form-control form-control-step-down no-js-hidden" type="button">
              <span class="visually-hidden">{{ stepDownTitle | punctify }}</span>
            </button>
          {% endif %}
          <input
            class="form-field {{ 'form-field-counter' if section.counters }}"
            id="{{ group.id }}"
            name="{{ section.name }}"
            value="{{ group.value }}"
            {{ 'type=number' if section.counters }}
            {{ 'min=' + group.min if group.min }}
            {{ 'max=' + group.max if group.min }}
            {{ 'required' if group.required }}
          />
          <span class="form-status {{ 'form-status-error' if group.error }}">{{ group.status }}</span>

          {% if section.counters %}
            <button class="form-control form-control-step-up no-js-hidden" type="button">
              <span class="visually-hidden">{{ stepDownTitle | punctify }}</span>
            </button>
          {% elif group.datepickerTitle %}
            <button class="form-control form-control-datepicker no-js-hidden" type="button">
              <span class="visually-hidden">{{ group.datepickerTitle | punctify }}</span>
            </button>
          {% endif %}
        </p>
      {% endfor %}
    </fieldset>
  {% endfor %}

  <button class="form-submit button button-big button-secondary" type="submit">
    {{ submitTitle }}
  </button>
</form>
