<div class="result">
  <h2 class="result-heading">
    {{ title | punctify(":") }}
    <span class="result-count">{{ count }}</span>
  </h2>

  <label aria-label="{{ sortTitle | punctify }}">
    {% with select | setProp("cssMix", "result-sort") | setProp("submit", true) %}
      {% include "components/select/select.njk" %}
    {% endwith %}
  </label>

  <ul class="result-mode" aria-label="{{ modesTitle | punctify }}">
    {% for mode in modes %}
      <li>
        <label class="result-mode-item result-mode-item-{{ mode.value }}">
          <span class="visually-hidden">{{ mode.title | punctify }}</span>
          <input
            class="result-mode-choose"
            name="sorting-type"
            type="radio"
            value="{{ mode.value }}"
            {{ "checked" if mode.checked }}
            data-submit
          />
        </label>
      </li>
    {% endfor %}
  </ul>
</div>
